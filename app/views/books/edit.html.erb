<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <% if flash[:book_edit_error].present? %>
        <%= flash[:book_edit_error].length %>errors prohibited this obj from being saved:
        <ul>
          <% flash[:book_edit_error].each do |error| %>
          <li><%= error %></li>
      <% end %>
      </ul>
      <% end %>
      <%= form_with model: @book do |b| %>

      <div class="form-group">
        <label for="book_title">Title</label>
        <%= b.text_field :title ,class:"form-control"%>
      </div>

      <div class="form-group">
        <label for="book_body">Opnion</label>
        <%= b.text_field :body ,class:"form-control"%>
      </div>

      <div class="form-group">
        <%= b.submit "Update Book", class: "btn btn-success"%>
      </div>
      <%= link_to "Show", book_path(@book.id) %>
      |
      <%= link_to "Back", books_path %>
      <% end %>
    </div>
  </div>
</div>