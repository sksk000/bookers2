<div class="container px-5 px-sm-0">
    <div class="row">
        <div class="col-md-3">
          <%= render "users/info", user: current_user %>
          <%= render "index" %>
        </div>
        <div class="col-md-8 offset-md-1">
          <h2>Books</h2>
          <table class="table">
            <thead>
              <tr>
                <th score="col"></th>
                <th scope="col">Title</th>
                <th scope="col">Opinion</th>
              </tr>
            </thead>
            <tbody>
              <% @book.each do |data| %>
                <tr>
                  <% if data.user.profile_image.attached? %>
                    <td>
                      <%= link_to image_tag(data.user.profile_image, size: "100x100"), user_path(data.user_id) %>
                    </td>
                  <% else%>
                    <td>
                      <%= link_to image_tag("no_image", size: "150x150"),user_path(data.user_id) %>
                    </td>
                  <% end %>
                  <td><%= link_to data.title, book_path(data.id)%></td>
                  <td><%= data.body %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
    </div>
</div>