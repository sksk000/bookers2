<div class="container px-5 px-sm-0">
    <div class="row">
        <div class="col-md-3">
          <%= render "users/info" ,user: @user %>
          <%= render "index" %>
        </div>
        <div class="col-md-8 offset-md-1">
          <h2>Book detail</h2>
          <table class="table">
            <tbody>
              <tr>
                <td>
                  <% if @book.user.profile_image.attached? %>
                    <%= link_to image_tag(@book.user.profile_image, size: "100x100"), user_path(@book.user_id) %>
                  <% else%>
                    <%= link_to image_tag("no_image", size: "150x150"), user_path(@book.user_id) %>
                  <% end %>
                  <div>
                    <%= link_to @book.user.name, user_path(@book.user_id) %>
                  </div>
                </td>
                <td>
                  <%= link_to @book.title, book_path(@book.id)%>
                </td>
                <td>
                  <%= @book.body %>
                </td>
                <td>
                  <% if current_user.id == @book.user_id %>
                    <%= link_to "Edit", edit_book_path(@book.id) %>
                  <% end %>
                </td>
                <td>
                  <% if current_user.id == @book.user_id %>
                    <%= link_to "Destroy","/books/#{@book.id}",method: :delete, "data-confirm" => "本当に削除しますか？" %>
                  <% end %>
                </td>
              </tr>
          <table>
        </div>
    </div>
</div>