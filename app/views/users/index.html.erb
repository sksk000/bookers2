<div class="container px-5 px-sm-0">
    <div class="row">
        <div class="col-md-3">
          <%= render "info", user: current_user %>
          <%= render "books/index" %>
        </div>
        <div class="col-md-8 offset-md-1">
          <h2>Users</h2>
          <table class="table">
            <thead>
              <tr>
                <th scope="col">image</th>
                <th scope="col">name</th>
              </tr>
            </thead>
            <tbody>
              <% @user.each do |data| %>
                <tr>
                  <% if data.image.attached? %>
                    <td><%= image_tag data.image, size: "100x100" %></td>
                  <% else %>
                    <td><%= image_tag "no_image", size: "100x100" %></td>
                  <% end %>
                  <td><%= data.name %></td>
                  <td><%= link_to "Show", user_path(data.id) %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
    </div>
</div>