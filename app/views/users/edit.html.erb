<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
        <% if flash[:user_edit_error].present? %>
          <%= flash[:user_edit_error].length %>errors prohibited this obj from being saved:
          <ul>
            <% flash[:user_edit_error].each do |error| %>
            <li><%= error %></li>
            <% end %>
            </ul>
        <% end %>

      <%= form_with model: @user do |u| %>
        <div class="form-group">
          <label for="user_name">Name</label>
          <%= u.text_field :name, class:"form-control" %>
        </div>

        <div class="form-group">
          <label for="image">Image</label>
          <%= u.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
        </div>

        <div class="form-group">
          <label for="user_introduction">Introduction</label>
          <%= u.text_field :introduction,class:"form-control" %>
        </div>
        <%= u.submit "Update User",class: "btn btn-success"%>
      <% end %>

    </div>
  </div>
</div>



